

<%# if @question is persisted then the 'form_for' helper wil make the action submit to questions_path(@question) and it will make the HTTP request PATCH %>

<%= @question.errors.full_messages.join(", ") %>
<%= form_for @question do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
  <div>
    <%= f.collection_select :category_id, Category.all, :id, :name%>
  </div>
  <%= f.submit %>
<% end %>
